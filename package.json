{
    "name": "ppm-extension",
    "displayName": "PPM - peak programming meter",
    "description": "Show live code coverage in VSCode",
    "version": "0.0.1",
    "license": "ISC",
    "engines": {
        "vscode": "^1.34.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.helloWorld"
    ],
    "contributes": {
        "commands": [
            {
                "command": "extension.helloWorld",
                "title": "Hello World"
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "ppm-explorer",
                    "name": "PPM File Explorer"
                }
            ]
        }
    },
    "main": "./out/extension.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/acutmore/ppm-extension.git"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.34.0",
        "typescript": "^3.8.3"
    },
    "prettier": {
        "semi": true,
        "singleQuote": false,
        "tabWidth": 4,
        "trailingComma": "all"
    }
}
